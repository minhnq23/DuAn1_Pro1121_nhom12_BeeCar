<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_full_screen"
    tools:context=".RegisterDriverActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar_register_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/fredoka_one"
        android:paddingLeft="25dp"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:textSize="25dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.251" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="224dp"
        android:background="@drawable/bg_form_register_driver"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/ed_last_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="40dp"

            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_ed_register_driver"
            android:paddingLeft="20dp"
            android:hint="Họ" />
        <TextView
            android:id="@+id/error_last_name"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:paddingLeft="15dp"

            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ed_first_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_ed_register_driver"
            android:paddingLeft="20dp"
            android:hint="Tên" />
        <TextView
            android:id="@+id/error_first_name"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:paddingLeft="15dp"

            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ed_user_name_register_driver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_ed_register_driver"
            android:paddingLeft="20dp"
            android:hint="user name" />
        <TextView
            android:id="@+id/error_user_name"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:paddingLeft="15dp"

            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/ed_password_register_driver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_ed_register_driver"
            android:paddingLeft="20dp"
            android:hint="password" />
        <TextView
            android:id="@+id/error_password"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:paddingLeft="15dp"

            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_register_driver"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_register_driver"
            android:textColor="#FF5722"
            android:text="Đăng ký" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>