<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <View
        android:id="@+id/bg1"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginLeft="-190dp"
        android:layout_marginTop="-900dp"
        android:background="@drawable/bg_lg_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bee Car"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="387dp"
        android:layout_height="417dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/bg_dangnhap"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abyssinicasll_regular"
            android:text="Đăng Nhập"
            android:textColor="#FF5722"
            android:textSize="40dp"

            />

        <EditText
            android:id="@+id/ed_user"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:hint="Tên tài khoản"
            android:padding="8dp"
            app:errorEnabled="false"
            app:hintTextColor="#FF6F00"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:background="@drawable/bg_edit_text"

            />



        <EditText
            android:id="@+id/ed_pass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:hint="Mật Khẩu"
            android:inputType="textPassword"
            android:padding="8dp"
            app:errorEnabled="true"
            app:hintTextColor="#FF6F00"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:background="@drawable/bg_edit_text"

            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_Pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/abyssinicasll_regular"
                android:text="Nhớ mật khẩu" />

            <TextView
                android:id="@+id/tv_update_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:fontFamily="@font/abyssinicasll_regular"
                android:text=""
                android:textColor="#072EF3"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_dangnhap"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_button"
                android:backgroundTint="#FF5722"
                android:text="Đăng Nhập "
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="75dp"
                android:fontFamily="@font/abyssinicasll_regular"
                android:padding="8dp"
                android:text="Chưa có tài khoản?"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/abyssinicasll_regular"
                android:padding="8dp"
                android:text="Đăng ký"
                android:textColor="#FF5722"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bg2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginRight="-250dp"
        android:layout_marginBottom="-210dp"
        android:background="@drawable/bg_lg_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

    <View
        android:id="@+id/bg3"
        android:layout_width="300dp"
        android:layout_height="225dp"
        android:background="@drawable/bg_lg_1"
        android:layout_marginLeft="-150dp"
        android:layout_marginBottom="-150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

